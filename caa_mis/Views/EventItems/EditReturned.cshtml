@model caa_mis.Models.EventItem

@{
    ViewData["Title"] = "Edit Returned Event Item";
}

<h4>Edit Event Item</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditReturned">
            <input type="hidden" name="EventID" value="@Model.EventID" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="ItemID" class="control-label"></label>
                <select asp-for="ItemID" class="form-control" asp-items="ViewBag.ItemID" disabled></select>
                <input asp-for="ItemID" type="hidden" />
                <span asp-validation-for="ItemID" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" disabled />
                <input asp-for="Quantity" type="hidden" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ReturnedQuantity" class="control-label"></label>
                <input asp-for="ReturnedQuantity" class="form-control" />
                <span asp-validation-for="ReturnedQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="EventItems" asp-action="Return" asp-route-EventID="@Model.EventID">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
