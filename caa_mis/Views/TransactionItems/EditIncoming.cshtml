@model caa_mis.Models.TransactionItem

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Receive / Transfer Item</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditIncoming">
            <input type="hidden" name="TransactionID" value="@Model.TransactionID" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="ItemID" class="control-label"></label>
                <select asp-for="ItemID" class="form-control" asp-items="ViewBag.ItemID" readonly></select>
                <span asp-validation-for="ItemID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" readonly/>
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ReceivedQuantity" class="control-label">Quantity Received</label>
                <input asp-for="ReceivedQuantity" class="form-control" />
                <span asp-validation-for="ReceivedQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Incoming" asp-controller="TransactionItems" asp-route-TransactionID="@Model.TransactionID" class="btn btn-secondary">Back to Incoming List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
