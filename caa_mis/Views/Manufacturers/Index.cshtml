@model IEnumerable<caa_mis.Models.Manufacturer>

@{
    ViewData["Title"] = "Vendors";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary float-left">Create New</a>
    <button class="btn @(ViewData["Filtering"]) btn-toolbar float-end" type="button" data-bs-toggle="collapse" id="filterToggle" data-bs-target="#collapseFilter" aria-expanded="false" aria-controls="collapseFilter">
        Filter/Search
    </button>
</p>

<form asp-action="Index" method="get">
    <input type="hidden" name="sortDirection" value="@ViewData["sortDirection"]" />
    <input type="hidden" name="sortField" value="@ViewData["sortField"]" />
    <div class="form-horizontal">
        <div class="collapse" id="collapseFilter">
            <div class="card card-body bg-light">
                <div class="row">
                    <div class="d-block d-lg-none">
                        <div class="form-group">
                            <label class="control-label">Sort By:</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <div class="input-group-text">
                                        <input type="checkbox" class="" value="desc"
                                        @((ViewData["sortDirection"].ToString() != "asc" ? "checked=\"checked\"" : ""))
                                               name="sortDirectionCheck" />&nbsp;&nbsp;Descending
                                    </div>
                                </div>
                                <select name="sortFieldID" class="form-control form-select" asp-items="ViewBag.sortFieldID"></select>
                            </div>
                        </div>
                    </div>
                    <div class="form-group col-md-4">
                        <label class="control-label">Search Name:</label>
                        @Html.TextBox("SearchName", null, new { @class = "form-control p-2" })
                    </div>
                    <div class="form-group col-md-4">
                        <label class="control-label">Search Phone:</label>
                        @Html.TextBox("SearchPhone", null, new { @class = "form-control p-2" })
                    </div>
                    <div class="form-group col-md-4">
                        <label class="control-label">Filter by Status:</label>
                        @Html.DropDownList("Status", new SelectList(Enum.GetValues(typeof(Archived))), "-- Select --", htmlAttributes: new { @class = "form-control form-select" })
                    </div>
                    <div class="form-group col-md-4 align-self-end">
                        <input type="submit" name="actionButton" value="Apply" class="btn btn-outline-primary" />
                        <a asp-action="Index" class="btn btn-outline-dark">Clear</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="container-fluid d-block d-lg-none">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="card mb-sm-3" style="min-width: 18rem;">
                    <h5 class="card-header"><strong>@Html.DisplayFor(modelItem => item.Name)</strong></h5>
                    <div class="card-body">
                        <dl class="row lh-1">
                            <dt class="col-3 text-truncate">
                                @Html.DisplayNameFor(model => model.Name)
                            </dt>
                            <dd class="col-9">
                                @Html.DisplayFor(modelItem => item.Name)
                            </dd>
                            <dt class="col-3 text-truncate">
                                @Html.DisplayNameFor(model => model.Address1)
                            </dt>
                            <dd class="col-9">
                                @Html.DisplayFor(modelItem => item.Address1)
                            </dd>
                            <dt class="col-3 text-truncate">
                                @Html.DisplayNameFor(model => model.Address2)
                            </dt>
                            <dd class="col-9">
                                @Html.DisplayFor(modelItem => item.Address2)
                            </dd>
                            <dt class="col-3 text-truncate">
                                @Html.DisplayNameFor(model => model.City)
                            </dt>
                            <dd class="col-9">
                                @Html.DisplayFor(modelItem => item.City)
                            </dd>
                            <dt class="col-3 text-truncate">
                                @Html.DisplayNameFor(model => model.Province)
                            </dt>
                            <dd class="col-9">
                                @Html.DisplayFor(modelItem => item.Province)
                            </dd>
                            <dt class="col-3 text-truncate">
                                @Html.DisplayNameFor(model => model.PostalCode)
                            </dt>
                            <dd class="col-9">
                                @Html.DisplayFor(modelItem => item.PostalCode)
                            </dd>
                            <dt class="col-3 text-truncate">
                                @Html.DisplayNameFor(model => model.Phone)
                            </dt>
                            <dd class="col-9">
                                @Html.DisplayFor(modelItem => item.Phone)
                            </dd>
                            <dt class="col-3 text-truncate">
                                @Html.DisplayNameFor(model => model.Email)
                            </dt>
                            <dd class="col-9">
                                @Html.DisplayFor(modelItem => item.Email)
                            </dd>
                            <dt class="col-3 text-truncate">
                                @Html.DisplayNameFor(model => model.Status)
                            </dt>
                            <dd class="col-9">
                                @Html.DisplayFor(modelItem => item.Status)
                            </dd>
                        </dl>
                        <div class="card-footer">
                            <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.ID">Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="d-none d-lg-block">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>
                            <input type="submit" name="actionButton" value="Name" class="btn btn-link btn-1" />
                        </th>
                        <th>
                            <input type="submit" name="actionButton" value="Address 1" class="btn btn-link btn-1" />
                        </th>
                        <th>
                            <input type="submit" name="actionButton" value="Address 2" class="btn btn-link btn-1" />
                        </th>
                        <th>
                            <input type="submit" name="actionButton" value="City" class="btn btn-link btn-1" />
                        </th>
                        <th>
                            <input type="submit" name="actionButton" value="Province" class="btn btn-link btn-1" />
                        </th>
                        <th>
                            <input type="submit" name="actionButton" value="Postal Code" class="btn btn-link btn-1" />
                        </th>
                        <th>
                            <input type="submit" name="actionButton" value="Phone" class="btn btn-link btn-1" />
                        </th>
                        <th>
                            <input type="submit" name="actionButton" value="Email" class="btn btn-link btn-1" />
                        </th>
                        <th>
                            <input type="submit" name="actionButton" value="Status" class="btn btn-link btn-1" />
                        </th>
                        <th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model) 
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Address1)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Address2)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.City)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Province)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PostalCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Phone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.ID">Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <partial name="_PagingNavBar" />
</form>